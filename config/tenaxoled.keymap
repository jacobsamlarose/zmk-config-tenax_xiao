        ht_swapper: ht_swapper {
            compatible = "zmk,behavior-hold-tap";
            label = "HT_SWAPPER";
            bindings = <&mo>, <&swapper>;

            #binding-cells = <2>;
            tapping-term-ms = <150>;
        };

        ht_L2shft: ht_L2shft {
            compatible = "zmk,behavior-hold-tap";
            label = "HT_L2SHFT";
            bindings = <&layer_modifier>, <&sk>;

            #binding-cells = <2>;
            tapping-term-ms = <150>;
        };

        td_shiftcaps: td_shiftcaps {
            compatible = "zmk,behavior-tap-dance";
            label = "TD_SHIFTCAPS";
            #binding-cells = <0>;
            bindings = <&sk LEFT_SHIFT>, <&caps_word>;

            tapping-term-ms = <250>;
        };

        ht_kptd: ht_kptd {
            compatible = "zmk,behavior-hold-tap";
            label = "HT_KPTD";
            bindings = <&kp>, <&td_shiftcaps>;

            #binding-cells = <2>;
            tapping-term-ms = <200>;
            flavor = "balanced";
        };

        ht_kpkp: ht_kpkp {
            compatible = "zmk,behavior-hold-tap";
            label = "HT_KPKP";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            flavor = "tap-preferred";
            tapping-term-ms = <120>;
        };

        td_shlock_movlock: td_shlock_movlock {
            compatible = "zmk,behavior-tap-dance";
            label = "TD_SHLOCK_MOVLOCK";
            #binding-cells = <0>;
            bindings = <&hold_shift>, <&smart_moveline>;

            tapping-term-ms = <250>;
        };
    };

    macros {
    };

    keymap {
        compatible = "zmk,keymap";

        default {
            display-name = "0DFL";
            bindings = <
&kp Q                  &kp W  &kp E       &kp R           &kp T             &kp Y        &kp U                              &kp I       &kp O    &kp P
&ht_hl 2 A             &kp S  &ht_hl 1 D  &hm LEFT_GUI F  &kp G             &kp H        &ht_hyper LS(LA(LC(RIGHT_GUI))) J  &ht_hl 3 K  &kp L    &ht_hl 2 APOS
&ht_kpkp LEFT_SHIFT Z  &kp X  &kp C       &kp V           &ht_hl 4 B        &kp N        &kp M                              &td_semic   &kp DOT  &sk RIGHT_SHIFT
                              &td_esc     &mt LGUI TAB    &mt LCTRL RETURN  &lt 1 SPACE  &td_shiftcaps                      &kp CAPS
            >;

            sensor-bindings = <&inc_dec_kp RIGHT LEFT>;
            label = "0DFL";
        };

        NUMNAV {
            label = "1NMNV";
            display-name = "1NMNV";
            bindings = <
&kp PLUS                    &kp NUMBER_1                &kp NUMBER_2  &kp NUMBER_3       &kp PERIOD  &none            &macro_displaylocn           &none     &none                          &kp ESC
&kp MINUS                   &pht_L2shift LEFT_SHIFT N4  &kp N5        &ht_hl 3 NUMBER_6  &kp COLON   &next_slideover  &left_taphold RA(LEFT) LEFT  &kp UP    &rght_taphold RA(RIGHT) RIGHT  &kp SLASH
&ht_shift LEFT_SHIFT EQUAL  &kp N7                      &kp N8        &kp N9             &kp N0      &macro_switch    &left_taphold LA(LEFT) LEFT  &kp DOWN  &rght_taphold RA(RIGHT) RIGHT  &ht_shift RIGHT_SHIFT EQUAL
                                                        &trans        &trans             &trans      &mo 3            &trans                       &trans
            >;

            sensor-bindings = <&inc_dec_kp UP DOWN>;
        };

        SYM_MED {
            label = "2SYME";
            display-name = "2SYM";
            bindings = <
&none  &kp EXCL        &kp AT_SIGN     &kp LA(NUMBER_3)                      &none         &kp RS(RG(NUMBER_3))  &kp C_RW      &kp C_VOL_UP  &kp C_FF  &none
&none  &kp LEFT_SHIFT  &ht_hl 1 GRAVE  &ht_hyper LS(LA(LC(LEFT_GUI))) TILDE  &none         &none                 &kp C_BRI_UP  &kp C_VOL_DN  &none     &none
&none  &none           &kp PIPE        &kp UNDER                             &kp KP_EQUAL  &none                 &kp C_BRI_DN  &none         &none     &none
                       &trans          &mt LGUI LS(TAB)                      &trans        &trans                &trans        &trans
            >;

            sensor-bindings = <&inc_dec_kp LG(LS(Z)) LG(Z)>;
        };

        SHORTS {
            label = "3SHORT";
            display-name = "3SHRT";
            bindings = <
&none  &none     &none         &none         &none      &macro_displaylocn  &none                             &none             &none                           &none
&none  &FN_left  &FN_up        &FN_right     &none      &none               &left_taphold LG(L) LG(NUMBER_1)  &kp LG(LA(UP))    &left_taphold LG(LA(L)) LG(N0)  &kp LA(LG(EQUAL))
&none  &FN_left  &FN_down      &FN_right     &none      &none               &kp LG(LEFT_BRACKET)              &kp RG(RA(DOWN))  &kp RG(RBKT)                    &kp RIGHT_SHIFT
                 &kp LEFT_ALT  &kp LEFT_GUI  &kp LCTRL  &kp C_EJECT         &trans                            &trans
            >;

            sensor-bindings = <&inc_dec_kp TAB LS(TAB)>;
        };

        BOARD {
            label = "4BOARD";
            display-name = "4BRD";
            bindings = <
&bt BT0        &bt BT1        &bt BT2           &bt BT3        &bt BT4        &kp F1      &kp F2       &kp F3             &kp F4  &kp F5
&bt BT_DISC 0  &bt BT_DISC 1  &bt BT_DISC 2     &bt BT_DISC 3  &bt BT_DISC 4  &kp F6      &kp F7       &kp F8             &kp F9  &kp F10
&out OUT_TOG   &bt BT_CLR     &bt BT_PRV        &bt BT_NXT     &none          &kp F11     &kp F12      &none              &none   &ext_power EP_TOG
                              &ext_power EP_ON  &bootloader    &sys_reset     &sys_reset  &bootloader  &ext_power EP_OFF
            >;

            sensor-bindings = <&inc_dec_kp C_BRI_UP C_BRI_DN>;
        };
    };
};
