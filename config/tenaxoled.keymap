        swapper: swapper {
            compatible = "zmk,behavior-smart-toggle";
            #binding-cells = <0>;
            bindings = <&kp RGUI>, <&kp TAB>;

            ignored-key-positions = <2 12 20 29 31>;
            label = "SWAPPER";
